<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:text="背景"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_bg1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_corner_bg2"
            android:layout_height="match_parent"></LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_bg3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_bg4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"></LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:text="字号"
            android:paddingRight="22dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/pop_bottom_sz_zihao_jian"
                android:background="@drawable/button_solid_color"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="A-"
                android:textColor="#29ce1b"
                android:layout_height="40dp" />

            <TextView
                android:background="#00FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/pop_bottom_sz_zihao"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"

                />

            <Button
                android:id="@+id/pop_bottom_sz_zihao_jia"
                android:background="@drawable/button_solid_color"
                android:layout_width="0dp"
                android:text="A+"
                android:layout_weight="1"
                android:textColor="#29ce1b"
                android:layout_marginRight="10dp"
                android:layout_height="40dp" />


        </LinearLayout>



    </LinearLayout>



</LinearLayout>
